{
    "name": "rafflesargentina/l5-user-role-and-permission",
    "description": "UserRoleAndPermission Service Provider for Laravel 5",
    "keywords": [
        "pluma", "laravel", "user", "roles", "permissions", "eloquent"
    ],
    "homepage": "https://github.com/rafflesargentina/l5-user-role-and-permission",
    "license": "MIT",
    "authors": [
        {
            "name": "Mario Patronelli",
            "email": "mario@raffles.com.ar",
            "homepage": "http://raffles.com.ar",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=5.6.4",
        "doctrine/dbal": "^2.5",
        "laracasts/presenter": "^0.2.1",
        "caffeinated/repository": "^3.1",
        "rafflesargentina/l5-sluggable": "^1.0",
        "rafflesargentina/l5-filterable-sortable": "^1.0",
        "rafflesargentina/l5-resource-controller": "^1.0",
        "rafflesargentina/l5-action-based-form-request": "^1.0",
        "caffeinated/shinobi": "^3.0"
    },
    "require-dev": {
        "laravel/laravel": "~5.4|~5.5",
        "phpspec/phpspec": "^3.4",
        "phpunit/phpunit": "4.*",
        "orchestra/testbench": "^3.4",
        "laravelcollective/html": "^5.4",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "RafflesArgentina\\UserRoleAndPermission\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RafflesArgentina\\UserRoleAndPermission\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
